<div class="row">
  <div class="col-6 offset-3 col-xl-6 offset-3 col-lg-6 offset-3 col-md-6 offset-3 col-sm-12 col-xs-12">

    <% content_for :title, "New Jobs" %>

    <h1>Editar Empleo</h1>

    <%= form_with(model: @job_post, local: true) do |form| %>

      <% if @job_post.errors.any? %>

        <div id="error_explanation">
          <h2><%= pluralize(@job_post.errors.count, "error") %> prohibited this job post from being saved:</h2>
          <ul>
            <% @job_post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    
      <div class="form-group">
        <%= form.label :title, "Título" %>
        <%= form.text_field :title, placeholder: "Ingresa el título del trabajo", class:"form-control" %>
      </div>
    
      <div class="form-group">
        <%= form.label :description, "Descripción" %>
        <%= form.text_area :description, placeholder: "Ingresa la descripción del trabajo", class:"form-control", style: "height: 200px;"  %>
      </div>
        <%= form.hidden_field :created_by_id, value: current_user.id if user_signed_in? %>
      <div class="form-group mt-3">
        <%= form.submit "Editar", class:"btn btn-primary btn-sm" %>
      </div>
    <% end %>  

    <br>

    <div>
      <a class="btn btn-success btn-sm" href="/administrador/ver-empleos-publicados">Ver todos</a>
    </div>
  </div>
</div>
